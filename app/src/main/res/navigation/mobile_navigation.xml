    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_listar">

    <fragment
        android:id="@+id/nav_listar"
        android:name="com.miguel.myapplication.ui.listar.ListarFragment"
        android:label="Productos"
        tools:layout="@layout/fragment_listar" />

    <fragment
        android:id="@+id/nav_cargar"
        android:name="com.miguel.myapplication.ui.cargar.CargarFragment"
        android:label="Cargar Producto"
        tools:layout="@layout/fragment_cargar" />

    <fragment
        android:id="@+id/nav_eliminar"
        android:name="com.miguel.myapplication.ui.eliminar.EliminarFragment"
        android:label="Eliminar Producto"
        tools:layout="@layout/fragment_eliminar" />

    <fragment
        android:id="@+id/nav_detalle"
        android:name="com.miguel.myapplication.ui.detalle.DetalleFragment"
        android:label="Detalle Producto"
        tools:layout="@layout/fragment_detalle_producto" />

    <fragment
        android:id="@+id/nav_salir"
        android:name="com.miguel.myapplication.ui.salir.SalirFragment"
        android:label="Salir"
